<div id="home">
    <div class="container">
        <div class="row">
            <div class="col-8 offset-2">
                <h1>{{msg}}</h1>
                <h2>Login as Student / Instructor!</h2>
                <form class="clearfix mb-4" action="POST">
                    <div class="form-group">
                        <label for="login_name">Login Username</label>
                        <input type="text" id="login_name" class="form-control" aria-describedby="login_name"
                            placeholder="Enter Login username">
                    </div>
                    <div class="form-group">
                        <label for="login-phone">Enter Phone number</label>
                        <input type="text" id="login-phone" class="form-control" aria-describedby="login-phone"
                            placeholder="Enter Login Phone">
                    </div>
                    <button id="loginuser" class="btn btn-primary float-right">Login</button>
                </form>
                <h3>New user ??</h3>

                <a href="/newstudent"><button class="btn btn-lg btn-primary">
                        <span class="fa "></span> Register as a new student
                    </button></a>
                <a href="/newinstructor"><button class="btn btn-lg btn-primary">
                        <span class="fa "></span> Register as a new instructor
                    </button></a>
            </div>
        </div>
    </div>
</div>

<script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
